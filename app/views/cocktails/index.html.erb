<!-- Search form and banner-->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/564x/ea/dc/1a/eadc1a4e43906325f94bb2fbdf326fae.jpg);">
  <div class="container">
    <%= simple_form_for :search, url: cocktails_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
    <h1>CocktailsBar</h1>
    <p>Create your cocktail recipe book </p>
    <div class ="add_button">
        <%=link_to "Add New Cocktail", new_cocktail_path, class: "btn-ghost-white"%>
    </div>
  </div>
</div>
<!-- Cards of cocktails  -->
<div class="container-card">
    <% @cocktails.each do |cocktail| %>
    <% photo = cocktail.photo.attached? ? cocktail.photo.key : "beenm9hmytd46g4gukh8" %>
      <div class="card-cocktail" style = "background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= cl_image_path photo, width: 400, height:300, crop: :fill%>)">
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        <%= link_to (""), cocktail_path(cocktail), class: "far fa-trash-alt", method: :delete %>
      </div>
    <% end %>
</div>



